@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic')


alinearContenidosBase()
    left 0
    right 0
    margin-left auto
    margin-right auto

alinearContenidos()
    left 0
    right 0
    margin-left auto
    margin-right auto
    position relative
    overflow hidden

borderRadius()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

widthBono()
    max-width 976px
    width 100%

resetLineados()
    margin 0
    padding 0

font-family()
    font-family 'Source Sans Pro' !important


.ds-1col.node-page .field-name-body .field-items .even h2
    clear none
.ui-body-b, .ui-overlay-b
    text-shadow none

body
    font-family()

    #box_bonoRegalo
        alinearContenidos()

        .videoBono
            alinearContenidos()
            widthBono()
            height 570px

            .headerFinales
                display none

            .bonoRegalo
                z-index 0
                position absolute
                // display none

            .headerContent
                position relative
                alinearContenidos()
                color #fff
                width 100%
                text-align center
                margin-top 2em
                background-image url('../images/headerBG2.png')
                background-position 0 0
                height 542px

                h2
                    font-size 72px
                    font-weight 400
                    text-transform uppercase
                    resetLineados()
                    margin-top 70px
                    color #fff !important
                    font-family 'Source Sans Pro' !important

                h3
                    font-size 30px
                    font-weight 400
                    font-style italic
                    text-transform uppercase
                    resetLineados()
                    margin-bottom 1.5em
                    color #fff !important
                    font-family 'Source Sans Pro'

                a
                    borderRadius(30px)
                    background-color #0257be
                    padding 10px 50px
                    color #fff
                    text-decoration none
                    font-size 17px
                    margin-top 70px
                    margin-bottom 120px
                    display inline-block
                    font-family 'Source Sans Pro'

                    &:hover
                        background-color #fff
                        color #0257be
                p
                    color #fff !important
                    font-family 'Source Sans Pro'
                    font-size 14
                    font-weight 400
                    margin 0
                    padding 0


        .articleBono
            background-image url('../images/contentBG.png')
            background-size cover
            background-color #efefef
            alinearContenidos()
            padding-top 1em;
            widthBono()
            text-align center
            vertical-align top
            color #042e6e

            img.imgHand
                alinearContenidos()
                width 50%
                margin-right 3em

            .contentTxt
                display inline-block
                padding 0
                width 320px
                text-align left
                padding-right 70px
                vertical-align top
                margin-top 2em

        .headerFinales
        .headerFinales1
        .headerFinales2
        .headerFinales3
            display block
            position relative
            z-index 199

            .btnFinal
                width 180px
                height 150px
                position absolute
                cursor pointer
                background-image url(images/btnBG.png)

            .btn1
                right 21%
                top 65px

            .btn2
                right 13%
                top 210px

            .btn3
                right 21%
                top 355px



        .headerFinalesMB
            display none
            position absolute
            bottom 0
            z-index 199
            bottom 0px

            .btnMobile
                display inline-block
                margin-top .5em
                background-color #0f1922 !important
                height 95px !important
                width 30%

        .como-funciona
            max-width 976px
            width 100%
            margin 0 auto
            overflow hidden
            .div-como
                float left
                width 47%
                margin 0 auto
                h3
                    color #042e6e
                    font-weight 200
                    font-size 21px
                    text-transform uppercase
                ul
                    padding 1em 0
                    li
                        list-style none
                        margin-bottom 30px
                        .icon-como
                            display inline-block
                            vertical-align top
                            width 4%
                            margin-right 2em
                        .txt-como
                            text-align left
                            display inline-block
                            vertical-align top
                            width 80%
                            color #042e6e
            .left
                border-right 1px solid #e2e2e2
            .rigth
                float right
        .terminos-bono
            background-color #f6f6f6
            padding 3em 1em
            a
                color #00c0f3 !important
                font-size 19px !important
                text-decoration none !important




@media (max-width: 700px)
    #box_bonoRegalo
        background-color none
        .articleBono
            img.imgHand
                width 90% !important
            .contentTxt
                text-align left !important
                width 265px !important
                alinearContenidosBase()
                float none !important
                padding-right 0 !important

                img
                    width 120% !important

        .videoBono
            background-image url(../images/headerBG)
            height 550px !important

            .headerFinales
                display none !important

            .headerFinalesMB
                display block
                width 290px
                padding-bottom 25px
                alinearContenidosBase()
                text-align center
            .bonoRegalo
                display none

            .headerContent
                background-image url('../images/mobileBG.png') !important
                height 550px !important

                h2
                    font-size 2.2em !important
                    padding 5px !important
                    margin 0 !important
                h3
                    font-size 1.5em !important
                    padding 0 !important
                    margin 0 !important

                a
                    margin 0
                    display none !important

                p:last-child
                    display none !important
        .como-funciona
            .div-como
                float left
                width 100% !important

